<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="editUserDialog" title="Edit User">
        <VBox class="sapUiSmallMargin">
            <Label text="Name"/>
            <Input id="inputName" value="{editUserModel>/firstName}" />

            <Label text="Email"/>
            <Input id="" value="{editUserModel>/email}" />

            <Label text="Contact"/>
            <Input id="" value="{editUserModel>/contact}" />

            <Label text="Password"/>
            <Input id="inputPassword" value="{editUserModel>/password}" />

            <!-- Optionally, Gender could be included here -->
        </VBox>
        <beginButton>
            <Button text="Save" press=".onSaveEditUser"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
