<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Edit User">
        <content>
            <VBox>
                <Label text="Phone"/>
                <Input value="{editUser>/alternateNumber}"/>
                
                <Label text="Email"/>
                <Input value="{editUser>/email}"/>
                
                <Label text="Address ID"/>
                <Input value="{editUser>/currentAddressId}"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Save" press=".onSaveEdit"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelEdit"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
